<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/rounded_white_box"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="3dp"
    android:elevation="2dp">

    <!-- 图片区域 -->
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/spot_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/spot_huanghelou" />

        <TextView
            android:id="@+id/spot_rank"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="No. 1"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/rank_tag_bg"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <!-- 内容区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/spot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄鹤楼"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/spot_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亮点：诗词绝句中的江南名楼"
            android:textSize="8sp"
            android:background="#FFF1E0"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="15dp"
            android:textColor="#B36B00" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/eye" />

            <TextView
                android:id="@+id/spot_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0人浏览"
                android:textSize="10sp"
                android:layout_marginStart="6dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/spot_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离您292.8公里"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:textColor="#999999" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
